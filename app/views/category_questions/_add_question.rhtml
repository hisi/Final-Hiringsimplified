<h1>New category_question</h1>

<% form_for(@category_question) do |f| %>
  <%= f.error_messages %>


<%= f.hidden_field :category_id, :value => cat_id%>

<%= f.hidden_field :user_id, :value => current_user.id%>


   <p>
    <%= f.label :question %><br />
    <%= f.text_area :question,:rows => 5 %>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', category_questions_path %>