
<%=f.hidden_field :user_id, :value => params[:uid]%>

<h3>Basic Information</h3>
<hr />
<div class="left_box">
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name, :class => "required" %>
</div>

<div class="left_box">
  <%= f.label :middle_name %><br />
  <%= f.text_field :middle_name, :class => "bluex" %>
</div>
<div class="left_box">
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name, :class => "required" %>
</div><div class="spacer"></div>


<div class="left_box">
  <%= f.label :contact_Number %><br />
  <%= f.text_field :contact_num, :class => "bluex" %>
</div><div class="spacer"></div>
<div>
  <%= f.label :address %><br />
